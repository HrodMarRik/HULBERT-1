{
  "name": "tuto-angular-dev",
  "version": "1.0.0",
  "description": "Dépendances de développement pour le tutoriel Angular n-tier",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd Angular/Tuto-Angular && npm start",
    "dev:backend": "cd Angular/Tuto-Angular/backend && uvicorn main:app --reload",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd Angular/Tuto-Angular && npm run build:prod",
    "build:backend": "cd Angular/Tuto-Angular/backend && echo 'Backend build completed'",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd Angular/Tuto-Angular && npm run test:ci",
    "test:backend": "cd Angular/Tuto-Angular/backend && pytest",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd Angular/Tuto-Angular && npm run lint",
    "lint:backend": "cd Angular/Tuto-Angular/backend && flake8 .",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd Angular/Tuto-Angular && npm run lint:fix",
    "format:backend": "cd Angular/Tuto-Angular/backend && black .",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd Angular/Tuto-Angular && npm install",
    "setup:backend": "cd Angular/Tuto-Angular/backend && pip install -r requirements.txt"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "angular",
    "typescript",
    "n-tier",
    "postgresql",
    "fastapi",
    "tutorial",
    "development"
  ],
  "author": "Votre nom",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "main": "Notion.js",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HrodMarRik/HULBERT.git"
  },
  "type": "module",
  "bugs": {
    "url": "https://github.com/HrodMarRik/HULBERT/issues"
  },
  "homepage": "https://github.com/HrodMarRik/HULBERT#readme",
  "dependencies": {
    "@angular/cdk": "^20.2.9",
    "@notionhq/client": "^5.2.1",
    "dotenv": "^17.2.3"
  }
}
